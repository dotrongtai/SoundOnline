<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imagePlaylist"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/textPlaylistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên playlist"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textPlaylistDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả playlist"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/textTotalTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng số bài hát: 20"
            android:textSize="12sp"
            android:textColor="#999999" />

        <Button
            android:id="@+id/btnPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="4dp"
            android:text="Phát"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
