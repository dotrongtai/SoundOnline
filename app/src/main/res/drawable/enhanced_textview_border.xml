<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="#33000000" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <!-- Border layer -->
    <item>
        <shape>
            <corners android:radius="4dp" />
            <gradient
                android:startColor="#000000 "
                android:endColor="#000000 "
                android:angle="45" />
            <stroke
                android:width="1.5dp"
                android:color="#FFFFFFFF" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
</layer-list>